@model Course
<div class="card mb-3">
    <div class="row" id="kurs_@Model.Id">
        <div class="col-md-4">
            <img src="~/img/@Model.ImgUrl" class="img-fluid rounded-start" alt="" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>